# Jitsi Meet Environment Configuration
# Copy this file to .env and update with your values

# Domain Configuration
# Set this to your server's domain or IP address
JITSI_DOMAIN=meet.example.com

# Authentication
# Set to 0 for open access, 1 for JWT authentication
ENABLE_AUTH=0

# XMPP Configuration
XMPP_DOMAIN=meet.jitsi
XMPP_AUTH_DOMAIN=auth.meet.jitsi
XMPP_MUC_DOMAIN=muc.meet.jitsi
XMPP_INTERNAL_MUC_DOMAIN=internal-muc.meet.jitsi

# Jicofo Authentication
JICOFO_AUTH_USER=focus
JICOFO_AUTH_PASSWORD=changeme_jicofo_password

# JVB Authentication
JVB_AUTH_USER=jvb
JVB_AUTH_PASSWORD=changeme_jvb_password

# JWT Configuration (if ENABLE_AUTH=1)
JWT_SECRET=changeme_jwt_secret

# JVB Configuration
JVB_PORT=10000
JVB_TCP_HARVESTER_PORT=0

# Public IP (required for JVB to work properly)
# Set this to your server's public IP address
DOCKER_HOST_ADDRESS=YOUR_PUBLIC_IP

# Timezone
TZ=UTC
